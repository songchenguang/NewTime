<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/kitchen_dish_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/dish_1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/kitchen_dish_name"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="青菜"/>
        <TextView
            android:id="@+id/kitchen_dish_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdfasdfasdfas\ndfasdf"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/kitchen_dishes_month_sales_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/dishes_item_rmb_size"
                    android:text="@string/kitchen_dishes_month_sales"/>
                <TextView
                    android:id="@+id/kitchen_dishes_month_sales_textView"
                    android:layout_toRightOf="@id/kitchen_dishes_month_sales_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/dishes_item_rmb_size"
                    android:text="25"
                    />
                <com.tencent.newtime.widget.IconTextView
                    android:layout_toLeftOf="@+id/kitchen_dishes_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/dishes_item_rmb_size"
                    android:text="@string/if_RMB"/>
                <TextView
                    android:id="@+id/kitchen_dishes_price_textView"
                    android:layout_toLeftOf="@+id/kitchen_add_this_dishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/dishes_item_rmb_size"
                    android:layout_marginRight="8dp"
                    android:text="18"
                    />
                <com.tencent.newtime.widget.IconTextView
                    android:id="@+id/kitchen_add_this_dishes"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dish_plus_size"
                    android:text="@string/if_frame_add"
                    android:layout_marginRight="4dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>